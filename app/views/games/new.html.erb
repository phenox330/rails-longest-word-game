

<h1>New Game</h1>
<%= @array.join(" ") %>
<br>
<br>
<p>What is the longest word you can find ?</p>
<form class="input" action="/score" method="post" data-turbo="false">
  <input type="text" name="word" placeholder="Type your word here">
  <div class="d-none">
  <input type="text" name="letters" value="<%= @array.join("") %>">
  </div>
  <input type="submit" value="Play">

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
